<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for resource,
                    as: resource_name,
                    html: { method: :put, autocomplete: 'off' }
                    url: registration_path(resource_name) do |f| %>

  <%= devise_error_messages! %>

  <%= f.input :username %>
  <%= f.input :email, autofocus: true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <% hint = if @minimum_password_length then %>
  <%   pluralize(@minimum_password_length, "character") + ' minimum' %>
  <% end %>
  <%= f.input :password, required: true, hint: hint %><br />
  <i>(leave blank if you don't want to change it)</i>
  <%= f.input :password_confirmation %>
  <%= f.input :current_password,
              hint: (we need your current password to confirm your changes) %>

  <div class="actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),
                          data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
