<h2>Sign up</h2>

<%= simple_form_for resource,
                    as: resource_name,
                    html: { autocomplete: 'off' },
                    url: registration_path(resource_name) do |f| %>
  
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.input :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.input :email %>
  </div>

  <div class="field">
    <% hint = if @minimum_password_length then %>
    <%   pluralize(@minimum_password_length, "character") + ' minimum' %>
    <% end %>
    <%= f.input :password, required: true, hint: hint %>
  </div>

  <div class="field">
    <%= f.input :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
